{
  "name": "playwright-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for playwright e2e tests with gherkin",
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js",
    "test:report": "cucumber-js --format html:./reports/cucumber-report.html --format summary --format progress-bar --format json:./reports/cucumber-report.json",
    "test:report:html": "cucumber-js --format html:./cucumber-report.html --format summary --format progress-bar --format json:./cucumber-report.json",
    "test:report:json": "cucumber-js --format json:./cucumber-report.json"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^11.2.0",
    "@playwright/test": "^1.51.1",
    "@types/node": "^22.14.1",
    "prettier-eslint": "^16.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "playwright": "^1.51.1"
  }
}
